<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_movie"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:background="@drawable/rounded_images_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_item_movie_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/play"
        app:layout_constraintBottom_toBottomOf="@id/img_item_movie"
        app:layout_constraintEnd_toEndOf="@id/img_item_movie" />

    <TextView
        android:id="@+id/tv_item_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flow_wrapMode="aligned"
        android:width="110dp"
        android:text="@string/spiderman"
        app:layout_constraintTop_toBottomOf="@id/img_item_movie"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>